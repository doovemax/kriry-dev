#tokio #tokio-nav {
    display: flex;
    height: 2rem;
    margin-top: 3rem;
    padding: 0.5rem 1rem 1rem;
    background: linear-gradient(315deg,  #f5c4d4 0%,  #c4f5ed 100%);
}

#tokio #tokio-nav .logo {
    width: 3rem;
    height: 3rem;
}

#tokio #tokio-nav .nav  a {
    color: #7B463D;
}

#tokio #show .left h1, #tokio #show .left p, #tokio #show .left a {
    padding: 0 2rem;
}
#tokio #show .left h1 {
    font-size: 3rem; 
}
#tokio #show .left p {
    font-size: 1.4rem; 
}
#tokio #show .left a {
    font-size: 2rem
}
#tokio .features {
    padding: 0 2rem;
}
#tokio #footer {
    padding: 0 2rem;
}

//-----------------community----------------------------

#tokio-lanmu  {
    text-align: center;
    margin-top: 1rem;
}

#tokio-lanmu #word {
    font-size: 2rem;
    color: #7B463D;
    padding: 1rem 0;
    line-height: 2.5rem; 
    background: linear-gradient(315deg,  #f5c4d4 0%,  #c4f5ed 100%);
}

@media (min-width: 769px) {
    #tokio #tokio-nav .title {
        flex: 1;
        margin-left: 55%;
    }

    #tokio #tokio-nav .nav {
        display inline-block;
        font-size: 1.5rem;
        padding-left: 1rem;
    }

    #tokio #show {
        display: flex;
        padding: 1rem 0;
    }
    #tokio #show img {
        width: 70%;
    }
    #tokio #show .left {
        padding-right: 3rem;
    }
    #tokio .features {
        display: flex;
    }
    #tokio .features .left, #tokio .features .center {
        padding-right: 1rem;
    }
}

//-------------------mobile-----------------------------------

@media (max-width: 768px) {
    #tokio #tokio-nav .title {
        flex: 1; 
    }
    #tokio #tokio-nav .nav {
        display inline-block;
        font-size: 1.3rem;
    }
    #tokio #show img {
        display none
    }
    #tokio #show,  #tokio .features  #tokio #footer {
        text-align: center;
    }
}
@media (max-width: 419px) {
    #tokio {
        margin: 0 -10% 0 -30%;
    }
    #tokio #tokio-nav .title {
        margin-left: 2%;
    }
    #tokio #tokio-nav .nav {
        padding-left: 0.2rem;
    }
}
@media (min-width: 420px) and (max-width: 607px) {
    #tokio {
        margin: 0 -10% 0 -30%;
    }
    #tokio #tokio-nav .title {
        margin-left: 20%;
    }
    #tokio #tokio-nav .nav {
        padding-left: 0.5rem;
    }
}  
@media (min-width: 608px) and (max-width: 768px) {
    #tokio {
        margin: 0 -5% 0 -25%;
    }
    #tokio #tokio-nav .title {
        margin-left: 44%;
    }
    #tokio #tokio-nav .nav {
        padding-left: 0.5rem;
    }
}
@media (min-width: 769px) and (max-width: 930px) {
    #tokio {
        margin: 0 -5% 0 -25%;
    }
    #tokio #tokio-nav .title {
        margin-left: 50%;
    }
    #tokio #tokio-nav .nav {
        padding-left: 0.8rem;
    }
}
@media (min-width: 931px) {
    #tokio {
        margin: 0 -15% 0 -35%;
    }
}